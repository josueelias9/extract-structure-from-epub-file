{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug EPUB to PDF Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/epub_to_pdf.py",
            "args": [
                "my_epub.epub"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {},
            "python": "${command:python.interpreterPath}",
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Test Ollama Mediator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mediator.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "OLLAMA_HOST": "http://ollama:11434"
            },
            "python": "${command:python.interpreterPath}",
            "justMyCode": true,
            "stopOnEntry": false
        }
    ]
}